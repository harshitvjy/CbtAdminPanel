@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Manager</title>
 @*    <link rel="stylesheet" href="./login.css"> *@
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">

</head>
<body>

    <div class="pmMainContainer loginContainer">
        <div class="pmNavbar container-fluid">
            <div class="pmLogoContainer">
                <img src="~/images/admin/bbtlogo.png" />
            </div>
            <div class="pmLogoutBtn">
               @*  <button>Logout <img src="./Images/logoutIcon.png" alt=""></button> *@
            </div>
        </div>
        <div class="login-container">
            <h2>Log in</h2>
            <form>
                <div class="input-container">
                    <input type="email" placeholder="Email" required>
                </div>
                <div class="input-container">
                    <input type="password" id="password" placeholder="Password" required>
                    <span class="toggle-password" onclick="togglePassword()">

                        <i class="bi bi-eye-slash" id="eye-open"></i>
                        <i class="bi bi-eye" id="eye-closed" style="display: none;"></i>

                    </span>

                </div>
                <div class="remember-forgot-container">
                    <label>
                        <input type="checkbox">
                        Remember Me
                    </label>
                    <a href="#">Forget Password?</a>
                </div>
                <button type="submit" class="cbtAdminLoginBtn">SIGN UP</button>
            </form>
        </div>
    </div>

</body>
</html>


<script>
    function togglePassword() {
        const passwordField = document.getElementById('password');
        const eyeOpen = document.getElementById('eye-open');
        const eyeClosed = document.getElementById('eye-closed');

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            eyeOpen.style.display = 'none';
            eyeClosed.style.display = 'block';
        } else {
            passwordField.type = 'password';
            eyeOpen.style.display = 'block';
            eyeClosed.style.display = 'none';
        }
    }

</script>